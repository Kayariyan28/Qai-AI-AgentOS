---
import Robot3D from './Robot3D.astro';
---

<section class="relative w-full min-h-screen flex items-center justify-center overflow-hidden bg-transparent text-white p-6 pt-24 z-10">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 w-full max-w-7xl mx-auto items-center relative z-20">
    
    <!-- Left Column: Typography & CTAs -->
    <div class="space-y-8 text-center lg:text-left">

      
      <p class="text-xl md:text-2xl text-white max-w-2xl mx-auto lg:mx-0 leading-relaxed helvetica-text">
        Qai AgentOS is an experimental artificial intelligence operating system that replaces traditional command-line shells with a natural language interface powered by LLM agents.
      </p>
      
      <p class="text-lg text-white helvetica-text">
        Created by <span class="font-bold">Karan Chandra Dey</span>
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
        <a href="/guides/installation" class="px-8 py-4 bg-white text-black font-bold text-lg rounded-full hover:bg-gray-200 transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(255,255,255,0.3)]">
          Get Started
        </a>
        <a href="https://github.com/Kayariyan28/Qai-AI-AgentOS" class="px-8 py-4 border border-white/50 backdrop-blur-md text-white font-bold text-lg rounded-full hover:bg-white/20 transition-all">
          View Agent Source
        </a>
      </div>
      
      <div class="pt-8 flex items-center justify-center lg:justify-start gap-4 text-sm text-slate-300 font-mono">
         <span>v0.1.0-alpha</span>
         <span class="w-1 h-1 bg-slate-400 rounded-full"></span>
         <span class="text-emerald-400 flex items-center gap-2">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
            </span>
            System Online
         </span>
      </div>
    </div>

    <!-- Right Column: 3D Droid Core -->
    <div class="h-[500px] lg:h-[700px] w-full relative flex items-center justify-center">
        <Robot3D />
    </div>

  </div>
</section>

<style>
  /* Helvetica Font for Description - with high visibility */
  .helvetica-text {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-weight: 600;
    position: relative;
    z-index: 10;
    text-shadow: 
      0 0 10px rgba(0, 0, 0, 0.9),
      0 0 20px rgba(0, 0, 0, 0.8),
      0 0 30px rgba(0, 0, 0, 0.7),
      0 2px 4px rgba(0, 0, 0, 1);
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.4) 100%);
    padding: 12px 20px;
    border-radius: 8px;
    backdrop-filter: blur(4px);
  }
  
  /* Glitch Effect */
  .glitch {
    position: relative;
    color: white;
  }
  
  .glitch::before,
  .glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background: black;
  }
  
  .glitch::before {
    left: 2px;
    text-shadow: -1px 0 #ff00c1;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim 5s infinite linear alternate-reverse;
  }
  
  .glitch::after {
    left: -2px;
    text-shadow: -1px 0 #00fff9;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim2 5s infinite linear alternate-reverse;
  }
  
  @keyframes glitch-anim {
    0% { clip: rect(42px, 9999px, 44px, 0); transform: skew(0.5deg); }
    5% { clip: rect(12px, 9999px, 59px, 0); transform: skew(0.5deg); }
    10% { clip: rect(85px, 9999px, 19px, 0); transform: skew(0.5deg); }
    15% { clip: rect(32px, 9999px, 14px, 0); transform: skew(0.5deg); }
    20% { clip: rect(65px, 9999px, 92px, 0); transform: skew(0.5deg); }
    25% { clip: rect(8px, 9999px, 5px, 0); transform: skew(0.5deg); }
    30% { clip: rect(54px, 9999px, 24px, 0); transform: skew(0.5deg); }
    35% { clip: rect(98px, 9999px, 3px, 0); transform: skew(0.5deg); }
    40% { clip: rect(14px, 9999px, 5px, 0); transform: skew(0.5deg); }
    45% { clip: rect(82px, 9999px, 35px, 0); transform: skew(0.5deg); }
    50% { clip: rect(12px, 9999px, 5px, 0); transform: skew(0.5deg); }
    55% { clip: rect(65px, 9999px, 83px, 0); transform: skew(0.5deg); }
    60% { clip: rect(3px, 9999px, 42px, 0); transform: skew(0.5deg); }
    65% { clip: rect(92px, 9999px, 12px, 0); transform: skew(0.5deg); }
    70% { clip: rect(43px, 9999px, 63px, 0); transform: skew(0.5deg); }
    75% { clip: rect(5px, 9999px, 21px, 0); transform: skew(0.5deg); }
    80% { clip: rect(87px, 9999px, 94px, 0); transform: skew(0.5deg); }
    85% { clip: rect(12px, 9999px, 43px, 0); transform: skew(0.5deg); }
    90% { clip: rect(64px, 9999px, 8px, 0); transform: skew(0.5deg); }
    95% { clip: rect(39px, 9999px, 92px, 0); transform: skew(0.5deg); }
    100% { clip: rect(2px, 9999px, 15px, 0); transform: skew(0.5deg); }
  }
  
  @keyframes glitch-anim2 {
    0% { clip: rect(65px, 9999px, 100px, 0); transform: skew(0.5deg); }
    5% { clip: rect(52px, 9999px, 74px, 0); transform: skew(0.5deg); }
    10% { clip: rect(79px, 9999px, 85px, 0); transform: skew(0.5deg); }
    15% { clip: rect(15px, 9999px, 5px, 0); transform: skew(0.5deg); }
    20% { clip: rect(44px, 9999px, 93px, 0); transform: skew(0.5deg); }
    25% { clip: rect(2px, 9999px, 64px, 0); transform: skew(0.5deg); }
    30% { clip: rect(82px, 9999px, 2px, 0); transform: skew(0.5deg); }
    35% { clip: rect(54px, 9999px, 34px, 0); transform: skew(0.5deg); }
    40% { clip: rect(12px, 9999px, 8px, 0); transform: skew(0.5deg); }
    45% { clip: rect(52px, 9999px, 38px, 0); transform: skew(0.5deg); }
    50% { clip: rect(32px, 9999px, 2px, 0); transform: skew(0.5deg); }
    55% { clip: rect(89px, 9999px, 62px, 0); transform: skew(0.5deg); }
    60% { clip: rect(43px, 9999px, 2px, 0); transform: skew(0.5deg); }
    65% { clip: rect(5px, 9999px, 26px, 0); transform: skew(0.5deg); }
    70% { clip: rect(65px, 9999px, 93px, 0); transform: skew(0.5deg); }
    75% { clip: rect(32px, 9999px, 12px, 0); transform: skew(0.5deg); }
    80% { clip: rect(8px, 9999px, 5px, 0); transform: skew(0.5deg); }
    85% { clip: rect(54px, 9999px, 34px, 0); transform: skew(0.5deg); }
    90% { clip: rect(76px, 9999px, 2px, 0); transform: skew(0.5deg); }
    95% { clip: rect(23px, 9999px, 45px, 0); transform: skew(0.5deg); }
    100% { clip: rect(2px, 9999px, 64px, 0); transform: skew(0.5deg); }
  }
</style>
